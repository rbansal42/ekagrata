{
  "collectionName": "components_shared_locations",
  "info": {
    "displayName": "Location",
    "description": "Address and location information"
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "address": {
      "type": "text",
      "required": true
    },
    "city": {
      "type": "string",
      "required": true
    },
    "state": {
      "type": "string",
      "required": true
    },
    "pincode": {
      "type": "string",
      "required": true,
      "regex": "^[0-9]{6}$"
    }
  }
} 